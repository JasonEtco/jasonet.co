---
pagination:
    data: collections.posts
    size: 1
    alias: post
permalink: "og/{{ post.fileSlug }}.html"
layout: layouts/_default.njk
---

<div class="p-12 flex" style="height: 100vh">
  <div class="mr-6 text-8xl pt-1">
    📝
  </div>

  <div class="flex flex-col">
    <h1 class="text-8xl" style="font-weight: 900; line-height: 1.1;">{{ post.data.title }}</h1>
    <p class="text-4xl my-6 text-gray-700">{{ post.data.spoiler }}</p>
    
    <footer class="mt-auto text-lg">
      <div class="text-gray-700 text-lg">
        <time itemProp="datePublished">{{ post.data.date | date }}</time>
        <span> • </span>
        <time itemProp="timeRequired">
          {{ post.templateContent | timeToRead }}
        </time>
      </div>

      <span class="text-orange font-bold">{{ constants.siteUrl }}{{ post.url }}</span>
    </footer>
  </div>
</div>
